---
import Layout from "../layouts/Site.astro";
import Masthead from "../components/Masthead.astro";
import Footer from "../components/Footer.astro";
const pageTitle = "Juncta Juvant — A Queen City Compendium";
---
<Layout title={pageTitle}>
  <div class="container">
    <Masthead />

    <main class="layout" aria-live="polite">
      <section class="box news" id="news-box">
        <h2>Latest Cincinnati News</h2>
        <div class="content">
          <ul class="news-list" id="news-list">
            <li class="muted">Loading headlines…</li>
          </ul>
        </div>
      </section>

      <figure class="box hero" style="--hero-x:0%; --hero-y:-20%;" aria-label="Feature photo">
        <div class="hero-text">
          <h3 class="hero-headline">
            <a id="hero-link" href="#" target="_blank" rel="noopener"></a>
          </h3>
          <div class="hero-meta source">
            <span id="hero-source"></span> · <span id="hero-time"></span><span id="hero-byline"></span>
          </div>
        </div>
        <div class="hero-media">
          <img src="/roebling.jpg" alt="Roebling Bridge at sunset">
        </div>
        <figcaption class="hero-desc" id="hero-desc"></figcaption>
      </figure>

      <aside class="rail">
        <section class="box" id="weather-box" aria-live="polite">
          <h2>Weather</h2>
          <div class="content">
            <div class="stat-line">
              <div class="temp" id="temp">—</div>
              <div class="wx" id="wx-desc">Fetching current conditions…<br><small id="wx-extra"></small></div>
            </div>
          </div>
        </section>

        <section class="box" id="sports-box">
          <h2>Sports</h2>
          <div class="content" id="sports-content">
            <div class="muted">Connecting to scores…</div>
          </div>
        </section>
      </aside>
    </main>

    <Footer />
  </div>
</Layout>
