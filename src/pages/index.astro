---
import Masthead from "../components/Masthead.astro";
import Footer from "../components/Footer.astro";
import mainScript from "../scripts/main.js?url";
import siteCss    from "../styles/site.css?url";

const title = "Juncta Juvant \u2014 A Queen City Compendium";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Icons / PWA -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon-180x180.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Analytics (deferred) -->
    <script defer data-domain="junctajuvant.com" src="https://stats.4gk.us/js/script.js"></script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:opsz,wght@6..72,500;6..72,700&family=Source+Serif+4:opsz,wght@8..60,400;8..60,600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700;800;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href={siteCss} />
  </head>
  <body>
    <div class="container">
      <Masthead />
      <main class="layout" aria-live="polite">

      </div>
    </header>

    <div class="rule"></div>

    <main class="layout" aria-live="polite">
      <!-- Left: News -->
      <section class="box news" id="news-box">
        <h2>Latest Cincinnati News</h2>
        <div class="content">
          <ul class="news-list" id="news-list">
            <li class="muted">Loading headlines…</li>
          </ul>
        </div>
      </section>

      <!-- Middle: Hero (now a full story card) -->
    <figure class="box hero" style="--hero-x:0%; --hero-y:-20%;" aria-label="Feature photo">
      <div class="hero-text">
        <h3 class="hero-headline">
          <a id="hero-link" href="#" target="_blank" rel="noopener"></a>
        </h3>
        <div class="hero-meta source">
          <span id="hero-source"></span> · <span id="hero-time"></span><span id="hero-byline"></span>
        </div>
      </div>

      <div class="hero-media">
        <img src="roebling.jpg" alt="Roebling Bridge at sunset">
      </div>

      <figcaption class="hero-desc" id="hero-desc"></figcaption>
    </figure>


      <!-- Right: Weather + Sports -->
      <aside class="rail">
        <section class="box" id="weather-box" aria-live="polite">
          <h2>Weather</h2>
          <div class="content">
            <div class="stat-line">
              <div class="temp" id="temp">—</div>
              <div class="wx" id="wx-desc">Fetching current conditions…<br><small id="wx-extra"></small></div>
            </div>
          </div>
        </section>

        <section class="box" id="sports-box">
          <h2>Sports</h2>
          <div class="content" id="sports-content">
            <div class="muted">Connecting to scores…</div>
          </div>
        </section>
      </aside>
    </main>
      <Footer />
    </div>
  <!-- just before </body> -->
<script type="module" src={mainScript}></script>
</body>
</html>
  </body>
</html>
